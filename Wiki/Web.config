<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="dotNetOpenAuth" type="DotNetOpenAuth.Configuration.DotNetOpenAuthSection" requirePermission="false" allowLocation="true"/>
  </configSections>
  <connectionStrings>
    <add name="WikiConnectionString" connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=Wiki;Integrated Security=True" providerName="System.Data.SqlClient"/>
  </connectionStrings>
  <appSettings>
    <add key="title" value="Miranda - An Tiny Wiki"/>
    <add key="author" value="Frank Hale"/>
    <add key="modifiedDate" value="17 February 2013"/>
  </appSettings>
  <dotNetOpenAuth>
    <openid>
      <relyingParty>
        <behaviors>
          <add type="DotNetOpenAuth.OpenId.Behaviors.AXFetchAsSregTransform, DotNetOpenAuth"/>
        </behaviors>
        <security rejectUnsolicitedAssertions="true"/>
      </relyingParty>
    </openid>
  </dotNetOpenAuth>
  <system.net>
    <defaultProxy useDefaultCredentials="true">
      <proxy autoDetect="False" usesystemdefault="True"/>
    </defaultProxy>
  </system.net>
  <system.web>
    <compilation debug="true" targetFramework="4.0"/>
    <httpRuntime encoderType="Microsoft.Security.Application.AntiXssEncoder, AntiXssLibrary"/>
    <customErrors mode="On"/>
    <httpHandlers>
      <add verb="*" path="*" validate="false" type="AspNetAdapter.AspNetAdapterHandler"/>
    </httpHandlers>
    <httpModules>
      <add type="AspNetAdapter.AspNetAdapterModule" name="AspNetAdapterModule"/>
    </httpModules>
  </system.web>
</configuration>